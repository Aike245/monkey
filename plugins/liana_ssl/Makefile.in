CC 	= $CC
CFLAGS	= $CFLAGS
LDFLAGS = $LDFLAGS
DEFS    = $DEFS -DPOSIX
INCDIR  = -I../../src/include
OBJECTS = liana_ssl.o
MATRIX_LIBS = /usr/lib/matrixssl
MATRIX_HEADERS = /usr/include/libmatrixssl

all: monkey-liana_ssl.so

monkey-liana_ssl.so: $(OBJECTS)
	$(CC) $(CFLAGS) $(LDFLAGS) $(DEFS) -shared -Wl -o $@ $^ -L$(MATRIX_LIBS) -lmatrixssl

.c.o:
	$(CC) $(CFLAGS) $(LDFLAGS) $(DEFS) $(INCDIR) -I$(MATRIX_HEADERS) -fPIC -c $<

clean:
	rm -rf *.o *.*~ *.*so*
