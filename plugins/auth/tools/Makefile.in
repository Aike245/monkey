all: ../../../bin/mk_passwd
include ../../Make.common

CC	= @echo "  CC   $(_PATH)/$@"; $CC
CC_QUIET= @echo -n; $CC
CFLAGS	= -I../../../include/ -I../ $CFLAGS
LDFLAGS = $LDFLAGS
SOURCES = ../sha1.c ../base64.c mk_passwd.c
OBJECTS = $(SOURCES:../.c=%.o)

../../../bin/mk_passwd: $(OBJECTS)
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $^ -ldl
