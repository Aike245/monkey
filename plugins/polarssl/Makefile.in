all: monkey-polarssl.so
include ../Make.common

CC	= @echo "  CC   $(_PATH)/$@"; $CC
CC_QUIET= @echo -n; $CC
AR      = @echo "  AR   $(_PATH)/$@"; ar
CFLAGS	= $CFLAGS $(MONKEY_POLARSSL_HEADERS)
LDFLAGS = $LDFLAGS $(MONKEY_POLARSSL_LIBRARY) -lpolarssl
DEFS    = $DEFS
OBJECTS = polarssl.o

-include $(OBJECTS:.o=.d)

monkey-polarssl.so: $(OBJECTS)
	$(CC) $(CFLAGS) $(DEFS) -shared -o $@ $^ -lc $(LDFLAGS)

monkey-polarssl.a: $(OBJECTS)
	$(AR) rcs $@ $(OBJECTS)
