CC 	= $CC
CFLAGS	= $CFLAGS
LDFLAGS = $LDFLAGS
DEFS    = $DEFS
INCDIR  = ../../src/include
SOURCES = patas.c connection.c
OBJECTS = patas.o connection.o

all:
	$(CC) $(CFLAGS) $(LDFLAGS) $(DEFS) -I$(INCDIR) -fPIC -c $(SOURCES)
	$(CC) $(CFLAGS) $(LDFLAGS) $(DEFS) -shared -o monkey-patas.so $(OBJECTS) -lc
clean:
	rm -rf *.o *~ *.*so*
